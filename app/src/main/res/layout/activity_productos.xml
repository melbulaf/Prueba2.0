<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutProductos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_main2"
    android:padding="16dp">

    <TextView
        android:id="@+id/tituloProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GestiÃ³n de Productos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProductos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tituloProductos"
        android:layout_above="@id/layoutBotones"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnAgregarProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agregar"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnEditarProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar"
            android:backgroundTint="#FFC107"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnEliminarProducto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Volver"
            android:backgroundTint="#9E9E9E"
            android:textColor="#FFFFFF"
            android:layout_margin="4dp" />
    </LinearLayout>
</RelativeLayout>
